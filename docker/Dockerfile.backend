# NOFX Backend Dockerfile (Go + TA-Lib)
# Multi-stage build with shared TA-Lib compilation stage
# Versions extracted as ARGs for maintainability
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

ARG GO_VERSION=1.25-alpine
ARG ALPINE_VERSION=latest
ARG TA_LIB_VERSION=0.4.0

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# TA-Lib Build Stage (shared across builds)
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM alpine:${ALPINE_VERSION} AS ta-lib-builder
ARG TA_LIB_VERSION

RUN apk update && apk add --no-cache \
    wget tar make gcc g++ musl-dev autoconf automake libtool

# ä½¿ç”¨å¤šä¸ªé•œåƒæºå’Œé‡è¯•æœºåˆ¶ä¸‹è½½ TA-Lib
RUN set -e && \
    for url in \
        "http://prdownloads.sourceforge.net/ta-lib/ta-lib-${TA_LIB_VERSION}-src.tar.gz" \
        "https://downloads.sourceforge.net/project/ta-lib/ta-lib/${TA_LIB_VERSION}/ta-lib-${TA_LIB_VERSION}-src.tar.gz" \
        "https://github.com/TA-Lib/ta-lib/releases/download/v${TA_LIB_VERSION}/ta-lib-${TA_LIB_VERSION}-src.tar.gz"; do \
        echo "Trying to download from: $url" && \
        if wget --timeout=30 --tries=3 "$url"; then \
            echo "Download successful from: $url" && break; \
        else \
            echo "Download failed from: $url, trying next..." && \
            rm -f ta-lib-${TA_LIB_VERSION}-src.tar.gz; \
        fi; \
    done && \
    if [ ! -f "ta-lib-${TA_LIB_VERSION}-src.tar.gz" ]; then \
        echo "All download attempts failed" && exit 1; \
    fi && \
    tar -xzf ta-lib-${TA_LIB_VERSION}-src.tar.gz && \
    cd ta-lib && \
    if [ "$(uname -m)" = "aarch64" ]; then \
        echo "Configuring for ARM64 architecture..." && \
        autoreconf -fiv && \
        CONFIG_GUESS=$(find /usr/share -name config.guess 2>/dev/null | head -1) && \
        CONFIG_SUB=$(find /usr/share -name config.sub 2>/dev/null | head -1) && \
        if [ -n "$CONFIG_GUESS" ] && [ -n "$CONFIG_SUB" ]; then \
            cp "$CONFIG_GUESS" config.guess && \
            cp "$CONFIG_SUB" config.sub && \
            chmod +x config.guess config.sub; \
        fi; \
    fi && \
    ./configure --prefix=/usr/local --disable-shared --enable-static && \
    make -j1 && make install && \
    cd .. && rm -rf ta-lib ta-lib-${TA_LIB_VERSION}-src.tar.gz

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Backend Build Stage (Go Application)
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM golang:${GO_VERSION} AS backend-builder

RUN apk update && apk add --no-cache git make gcc g++ musl-dev

COPY --from=ta-lib-builder /usr/local /usr/local

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=1 GOOS=linux \
    CGO_CFLAGS="-D_LARGEFILE64_SOURCE" \
    go build -trimpath -ldflags="-s -w" -o nofx .

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Runtime Stage (Minimal Executable Environment)
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM alpine:${ALPINE_VERSION}

# æ·»åŠ æ›´ç¨³å®šçš„é•œåƒæº
RUN echo "https://mirrors.aliyun.com/alpine/v3.22/main" > /etc/apk/repositories && \
    echo "https://mirrors.aliyun.com/alpine/v3.22/community" >> /etc/apk/repositories && \
    echo "https://dl-cdn.alpinelinux.org/alpine/v3.22/main" >> /etc/apk/repositories && \
    echo "https://dl-cdn.alpinelinux.org/alpine/v3.22/community" >> /etc/apk/repositories

RUN set -e && \
    for i in 1 2 3; do \
        echo "Attempt $i: Updating package index..." && \
        if apk update; then \
            echo "Package index updated successfully" && break; \
        else \
            echo "Attempt $i failed, retrying in 5 seconds..." && \
            sleep 5; \
        fi; \
    done && \
    apk add --no-cache ca-certificates tzdata curl

COPY --from=ta-lib-builder /usr/local /usr/local
WORKDIR /app
COPY --from=backend-builder /app/nofx .

# å¤åˆ¶é…ç½®æ–‡ä»¶å’Œæç¤ºè¯æ¨¡æ¿åˆ°é•œåƒä¸­
COPY config.json.example /app/config.json
COPY prompts /app/prompts

# åˆ›å»ºç©ºçš„ beta_codes.txt (å¯é€‰åŠŸèƒ½)
RUN touch /app/beta_codes.txt

# åˆ›å»ºå¯åŠ¨è„šæœ¬
RUN echo '#!/bin/sh' > /app/start.sh && \
    echo 'echo "ðŸš€ Starting NOFX Backend Service..."' >> /app/start.sh && \
    echo 'echo "â³ Waiting for dependencies to initialize..."' >> /app/start.sh && \
    echo 'sleep 10' >> /app/start.sh && \
    echo 'echo "âœ… Dependencies ready, starting application..."' >> /app/start.sh && \
    echo 'exec ./nofx' >> /app/start.sh && \
    chmod +x /app/start.sh

EXPOSE 8080

HEALTHCHECK --interval=20s --timeout=30s --start-period=180s --retries=10 \
  CMD curl -f --max-time 10 http://localhost:8080/health || exit 1

CMD ["/app/start.sh"]
